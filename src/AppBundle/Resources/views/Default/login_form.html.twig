<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<link rel="stylesheet" href="{{ asset('bundles/app/css/style.css') }}"/>
	</head>
	<body>
		{# La fonction twig "path" permet de générer une URL à partir du nom d'une route et d'éventuelles paramètres #}
		<form method="POST" action="{{ path('app_default_login_form') }}">
			<input type="text" name="login" value="{{ login }}"/>
			<input type="submit" value="Send"/>
		</form>

		{{ 'BONJOUR'|lower }} {# Utilisation d'un filtre pour mettre en minuscule #}
		{{ 'now'|date('Y-m-d') }} {# Affichage de la date du jour #}

		{# Une boucle dans laquelle i prend successivement les valeurs de 0 à 9 compris #}
		{% for i in 0..9 %}
			{% if i % 2 == 1 %}
				{% set class = 'blue' %}	{# Création d'une variable "color" en twig #}
			{% else %}
				{% set class = 'red' %}
			{% endif %}

			<p class="{{ class }}">Hello World!</p>
		{% endfor %}

		{# La même chose en plus court #}
		{% for i in 0..9 %}
			<p style="color:{{ i % 2 == 1 ? 'blue' : 'red' }};">Hello World!</p>
		{% endfor %}

		<script src="{{ asset('bundles/app/js/Default/login_form.js') }}"></script>
	</body>
</html>